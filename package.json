{
  "name": "blog",
  "version": "6.6.6",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "npm-run-all build:blog test",
    "build:blog": "astro build",
    "build:worker": "wrangler deploy src/functions/index.ts --dry-run --outdir build",
    "migrate:local": "wrangler d1 migrations apply blog --local",
    "migrate:remote": "wrangler d1 migrations apply blog --remote",
    "start": "npm-run-all migrate:local start:blog",
    "start:blog": "astro dev",
    "start:worker": "wrangler dev src/functions/index.ts --show-interactive-dev-session false --test-scheduled",
    "tail:blog": "wrangler pages deployment tail --project-name blog",
    "tail:worker": "wrangler tail blog-worker",
    "test": "vitest run"
  },
  "dependencies": {
    "@astrojs/cloudflare": "^12.5.3",
    "@astrojs/svelte": "^7.0.13",
    "@auth0/auth0-spa-js": "^2.1.3",
    "@cloudflare/vitest-pool-workers": "^0.8.30",
    "@cloudflare/workers-types": "^4.20250517.0",
    "@giscus/svelte": "^3.1.0",
    "@okkema/email": "^0.1.3",
    "@okkema/worker": "^3.11.0",
    "@sentry/astro": "^9.19.0",
    "@sentry/cloudflare": "^9.19.0",
    "@types/js-yaml": "^4.0.9",
    "@types/micromatch": "^4.0.9",
    "astro": "^5.7.13",
    "autoprefixer": "^10.4.21",
    "drizzle-kit": "^0.31.1",
    "drizzle-orm": "^0.43.1",
    "esbuild": "^0.25.4",
    "js-yaml": "^4.1.0",
    "marked": "^15.0.11",
    "marked-footnote": "^1.2.4",
    "npm-run-all": "^4.1.5",
    "svelte": "^5.30.2",
    "typescript": "^5.8.3",
    "vite-plugin-environment": "^1.1.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.3",
    "wrangler": "^4.15.2",
    "zod": "^3.24.4"
  }
}
