---
import metadata from "../../metadata.ts"
const { profile: { bio } } = metadata as Metadata
---
<ul>
  {bio.map(item => {
    const { icon, text, link } = item
    return (
      <li>
        <span class="icon">
          <i class={`i-${icon}`}></i>
        </span>
        <span>
          <span class="text">{text}</span>
          {link && <a href={link.href} title={link.href} target="_blank">{link.text}</a>} 
        </span>
      </li>
    )
  })}
</ul>

<style>
  ul {
    list-style: none;
    margin: 0;
    padding-left: 0;
  }

  li {
    display: flex;
    flex-direction: row;
    line-height: 1.5;
  }

  .icon {
    width: 25px;
    text-align: center;
  }

  .text {
    margin-left: 8px;
  }
</style>