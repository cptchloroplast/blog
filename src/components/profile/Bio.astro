---
const bio = [
  {
    icon: "code",
    text: "Software Engineer @ ",
    link: {
      href: "https://www.nvisia.com/",
      text: "nvisia",
    }
  },
  {
    icon: "wrench",
    text: "Guerrilla Bicycle Mechanic"
  },
  {
    icon: "leaf",
    text: "Amateur Botanist"
  },
  {
    icon: "space",
    text: "Astronomy Enthusiast"
  }
] as BioItem[]
---
<ul>
  {bio.map(item => {
    return (
      <li>
        <span class="icon">
          <i class={`i-${item.icon}`}></i>
        </span>
        <span>
          <span class="text">{item.text}</span>
          {item.link && <a href={item.link.href}>{item.link.text}</a>} 
        </span>
      </li>
    )
  })}
</ul>

<style>
  ul {
    list-style: none;
    margin: 0;
    padding-left: 0;
  }

  li {
    display: flex;
    flex-direction: row;
    line-height: 1.5;
  }

  .icon {
    width: 25px;
    text-align: center;
  }

  .text {
    margin-left: 10px;
  }

  a {
  	color: steelblue;
  }

  a:hover {
  	color: lightsteelblue;
  }
</style>