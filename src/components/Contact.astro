---
import Title from "./Title.astro"
import Subtitle from "./Subtitle.astro"
import Input from "./forms/Input.svelte"
import Button from "./forms/Button.svelte"
import Form from "./forms/Form.svelte"
import TextArea from "./forms/TextArea.svelte"
import Captcha from "./forms/Captcha.svelte"

const sitekey = process.env.HCAPTCHA_SITEKEY
---
<Title>Contact me</Title>
<Subtitle>Leave a message after the beep.</Subtitle>
<hr>
<Form
  action="message"
  method="POST"
  client:load 
>
  <div class="column">
    <Input 
      name="email"
      label="Email"
      placeholder="me@domain.tld"
      type="email"
      required
    />
    <TextArea
      name="message"
      label="Message"
      placeholder="No spam please!"
      required 
    />
    <div class="row">
      <Captcha 
        sitekey={sitekey} 
        client:load
      />
      <Button>
        <i class="i-send" />
      </Button>
    </div>
  </div>
</Form>

<style>
  .column {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .row {
    display: flex;
    flex-direction: row;
    align-items: stretch;
    gap: 10px;
    flex-wrap: wrap;
  }

  i {
    color: white;
    font-size: 30px;
  }
</style>