---
import type { Bio } from "@schemas"
import { Icon } from "@components/ui"
type Props = {
  bio: Bio[]
}
const { bio } = Astro.props
---
<ul>
  {bio.map(item => {
    const { icon, text, link } = item
    return (
      <li>
        <span class="icon">
          <Icon icon={icon} />
        </span>
        <span>
          <span>{text}</span>
          {link && <a href={link.href} title={link.href} target="_blank" rel="noreferrer">{link.text}</a>} 
        </span>
      </li>
    )
  })}
</ul>

<style>
  ul {
    list-style: none;
    margin: 0;
    padding-left: 0;
  }

  li {
    display: flex;
    flex-direction: row;
    line-height: 1.5;
  }

  .icon {
    width: 32px;
    text-align: center;
  }
</style>