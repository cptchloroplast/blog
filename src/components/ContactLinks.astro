---
import type { Contact } from "@schemas"
import { Icon } from "@components/ui"
type Props = {
  contact: Contact[]
}
const { contact } = Astro.props
---
<ul>
  {contact.map(item => {
    const { href, title, icon } = item
    return (
      <li>
        <a href={href} title={title} target="_blank" rel="noreferrer">
        <Icon icon={icon} size="large" />
        </a>
      </li>
    )
  })}
</ul>

<style>
  ul {
    margin: 0;
    list-style: none;
    padding-left: 0;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-around;
  }

  li {
    margin-right: 8px;
  }

  a {
    text-decoration: none;
    color: black;
  }

  a:hover, a:focus {
    color: dimgray;
  }

  a:active {
    color: darkslategray;
  }
</style>