---
import { Biography, ContactLinks, SubscribeForm, Tags } from "@components";
import { Card, Photo, Title } from "@components/ui";
import { BaseLayout } from "@layouts";
type Props = {
  title: string
  description?: string
};
const metadata = Astro.locals.metadata;
const {
  author: { name },
  profile: { bio, contact },
  navigation,
} = metadata;
const { title, description } = Astro.props;
---

<BaseLayout title={title} description={description} navigation={navigation}>
  <slot name="header" slot="header" />
  <Fragment slot="default">
    <slot />
    <span>
      <Card>
        <SubscribeForm client:load />
      </Card>
    </span>
  </Fragment>
  <Fragment slot="sidebar">
    <Card>
      <Photo src="/img/me.small.webp" alt="My profile picture" />
      <hr />
      <Title>{name}</Title>
      <Biography bio={bio} />
      <hr />
      <ContactLinks contact={contact} />
    </Card>
  </Fragment>
</BaseLayout>

<style>
  span {
    display: flex;
    flex-direction: row;
    justify-content: center;
  }
</style>
